/**app.wxss**/
page {
  /* 浅色模式变量 */
  --bg-color: #f8f8f8;
  --card-bg-color: #ffffff;
  --section-bg-color: #ffffff;
  --text-color: #333333;
  --text-secondary-color: #999999;
  --border-color: #f0f0f0;
  --shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  --icon-tint: initial;
  
  /* 默认使用浅色模式背景色 */
  background-color: #f8f8f8;
  color: #333333;
}



.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
