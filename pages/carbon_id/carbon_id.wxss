/* pages/carbon_id/carbon_id.wxss */
.carbon-id-page {
  min-height: 100vh;
  background-color: #f7f7f7;
}

.code-container {
  background-color: #ffffff;
  margin: 20rpx;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.id-info {
  text-align: center;
  padding: 20rpx 0 40rpx;
}

.carbon-id-text {
  font-size: 36rpx;
  color: #333;
  font-weight: 500;
}

.code-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 40rpx;
  padding: 20rpx 0;
}

.qr-code, .bar-code {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.code-canvas {
  width: 600rpx;
  height: 600rpx;
  background-color: #fff;
  border: 2rpx solid #eee;
  border-radius: 8rpx;
}

.bar-code .code-canvas {
  height: 300rpx;
}

.code-label {
  font-size: 28rpx;
  color: #666;
}

.tips {
  margin-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #999;
}
