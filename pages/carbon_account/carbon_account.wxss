/* pages/carbon_account/carbon_account.wxss */
.carbon-account-page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.header-container {
  background-color: #07C160;
  padding: 20rpx 30rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
  border-bottom-left-radius: 30rpx;
  border-bottom-right-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.header-subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

.coin-container {
  display: flex;
  align-items: center;
  background-color: transparent;
  padding: 12rpx 20rpx;
}

.coin-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 8rpx;
}

.coin-text {
  font-size: 26rpx;
  margin-right: 8rpx;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

.tasks-container {
  flex: 1;
  padding: 30rpx;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.task-item {
  display: flex;
  align-items: center;
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.task-item.completed {
  background-color: #f9f9f9;
  opacity: 0.8;
}

.task-icon-container {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(7, 193, 96, 0.1);
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 20rpx;
}

.task-icon {
  width: 48rpx;
  height: 48rpx;
}

.task-info {
  flex: 1;
}

.task-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.task-description {
  font-size: 24rpx;
  color: #666;
}

.task-reward {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  margin-left: 20rpx;
}

.reward-amount {
  font-size: 28rpx;
  font-weight: bold;
  color: #07C160;
  margin-bottom: 10rpx;
}

.check-in-btn {
  font-size: 24rpx;
  color: white;
  background-color: #07C160;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
}

.check-in-btn.checked {
  background-color: #999;
}

.empty-tasks {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.tips-container {
  margin: 20rpx 30rpx 40rpx;
  background-color: white;
  border-radius: 16rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.tips-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
}

.tips-content {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.tips-content text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 用户创建的任务 */
.user-tasks-container {
  margin: 30rpx 30rpx 0;
}

.section-header {
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.user-task-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.user-task-item {
  display: flex;
  align-items: center;
  background-color: white;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  position: relative;
}

.user-task-info {
  flex: 1;
}

.user-task-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.user-task-type {
  font-size: 24rpx;
  color: #666;
  background-color: #f5f5f5;
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 20rpx;
}

.user-task-date {
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.user-task-reward {
  font-size: 28rpx;
  font-weight: bold;
  color: #07C160;
  margin-right: 20rpx;
}

.arrow-right {
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg);
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.loading {
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #07C160;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 新建任务按钮 */
.add-task-btn {
  position: fixed;
  bottom: 40rpx;
  right: 30rpx;
  background-color: #07C160;
  color: white;
  text-align: center;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.2);
  z-index: 100;
  border-radius: 12rpx;
}