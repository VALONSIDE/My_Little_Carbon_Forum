.page-container {
  min-height: 100vh;
  background: #f8f8f8;
  position: relative;
  box-sizing: border-box;
}

.content-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 32rpx;
  padding-top: 208rpx; /* 增加与导航栏的间距 */
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.page-title {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  height: 120rpx; /* 减小标题高度 */
  line-height: 180rpx; /* 调整文字垂直位置 */
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  background: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

.login-container {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 32rpx; /* 增加内边距 */
  box-sizing: border-box;
}

.tab-header {
  background: #fff;
  padding: 16rpx;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  display: flex;
  justify-content: space-around;
  flex-shrink: 0;
}

.scroll-area {
  flex: 1;
  overflow: hidden;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 16rpx 0;
  font-size: 32rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #07C160;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: -16rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: #07C160;
  border-radius: 3rpx;
}

.panel {
  background: #fff;
  padding: 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.input-group {
  margin-bottom: 20rpx; /* 减小间距 */
  width: 100%;
}

.input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 44rpx;
  padding: 0 40rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
}

.input-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: -10rpx;
  margin-bottom: 20rpx;
  padding-left: 40rpx;
}

.submit-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #07C160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 60rpx;
  font-weight: normal;
}

.submit-btn::after {
  border: none;
}

.submit-btn[loading] {
  opacity: 0.8;
}

.divider {
  display: flex;
  align-items: center;
  margin: 60rpx 0;
}

.divider-line {
  flex: 1;
  height: 2rpx;
  background: #e5e5e5;
}

.divider-text {
  padding: 0 30rpx;
  color: #999;
  font-size: 28rpx;
}

.phone-login-btn {
  margin-top: 30rpx;
  background: #2b85e4;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.carbon-login-btn {
  margin-top: 30rpx;
  background: #00b578;
}
