/* pages/task_create/task_create.wxss */
.task-create-page {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background-color: #f5f5f5;
}

.form-container {
  padding: 30rpx;
  height: calc(100vh - 90rpx);
  box-sizing: border-box;
}

.form-item {
  background-color: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.form-input {
  width: 100%;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  font-size: 28rpx;
  color: #333;
  border: 1rpx solid #eee;
  padding: 16rpx;
  border-radius: 8rpx;
}

.picker-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

.submit-btn {
  margin-top: 60rpx;
  background-color: #07C160;
  color: white;
  font-size: 32rpx;
  padding: 20rpx 0;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}