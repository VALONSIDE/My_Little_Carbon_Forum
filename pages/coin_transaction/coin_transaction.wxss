/* pages/coin_transaction/coin_transaction.wxss */
.coin-transaction-page {
  min-height: 100vh;
  background-color: #f7f7f7;
  padding-bottom: 40rpx;
}

.form-container {
  padding: 30rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.form-group {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: 1px solid #eee;
}

.form-textarea {
  width: 100%;
  height: 200rpx;
  background-color: #f9f9f9;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  border: 1px solid #eee;
}

.type-radio-group {
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.radio-label {
  display: flex;
  align-items: center;
  margin-right: 60rpx;
  padding: 10rpx 20rpx;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.radio-label.active {
  background-color: rgba(7, 193, 96, 0.1);
}

.radio-label text {
  margin-left: 10rpx;
  font-size: 28rpx;
  color: #333;
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  background-color: #07C160;
  color: #fff;
  font-size: 32rpx;
  border-radius: 44rpx;
  margin-top: 40rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn[disabled] {
  opacity: 0.6;
  background-color: #07C160 !important;
  color: #fff !important;
}